{
  "name": "@pagespace/android",
  "version": "1.0.0",
  "description": "PageSpace Android App - Native wrapper for PageSpace using Capacitor",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "build": "pnpm exec cap sync android",
    "build:full": "pnpm --filter web build && pnpm exec cap sync android",
    "dev": "pnpm exec cap open android",
    "sync": "pnpm exec cap sync android",
    "update": "pnpm exec cap update android",
    "add-platform": "pnpm exec cap add android",
    "run": "pnpm exec cap run android"
  },
  "dependencies": {
    "@capacitor/app": "^7.0.3",
    "@capacitor/browser": "^7.0.3",
    "@capacitor/core": "^7.4.5",
    "@capacitor/android": "^7.0.3",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/preferences": "^7.0.3",
    "@capacitor/push-notifications": "^7.0.0",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@capgo/capacitor-social-login": "^7.20.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.0.0",
    "typescript": "^5.8.3",
    "web": "workspace:*"
  }
}
