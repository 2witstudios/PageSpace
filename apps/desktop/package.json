{
  "name": "desktop",
  "version": "1.0.3",
  "description": "PageSpace Desktop - Native desktop app for PageSpace",
  "homepage": "https://pagespace.ai",
  "license": "CC-BY-NC-SA-4.0",
  "author": {
    "name": "PageSpace",
    "email": "support@pagespace.ai"
  },
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "package": "pnpm build && electron-builder",
    "package:mac": "pnpm build && electron-builder --mac --publish never",
    "package:win": "pnpm build && electron-builder --win --publish never",
    "package:linux": "pnpm build && electron-builder --linux --publish never"
  },
  "dependencies": {
    "ai": "^5.0.81",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.6.2",
    "ws": "^8.18.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20.17.12",
    "@types/ws": "^8.18.1",
    "cross-env": "^7.0.3",
    "electron": "^33.3.1",
    "electron-builder": "^26.0.8",
    "electron-vite": "^4.0.1",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.pagespace.app",
    "productName": "PageSpace",
    "npmRebuild": false,
    "publish": {
      "provider": "github",
      "owner": "2witstudios",
      "repo": "PageSpace"
    },
    "directories": {
      "output": "dist-electron",
      "buildResources": "assets"
    },
    "files": [
      "out/**/*",
      "src/**/*.html",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "artifactName": "${productName}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "notarize": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}.${ext}"
    },
    "linux": {
      "publish": null,
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Office",
      "icon": "assets/icon.png",
      "artifactName": "${productName}.${ext}",
      "maintainer": "support@pagespace.ai"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
