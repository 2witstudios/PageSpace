{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@pagespace/lib": ["packages/lib/src/index.ts"],
      "@pagespace/lib/*": [
        "packages/lib/src/*",
        "packages/lib/src/auth/*",
        "packages/lib/src/utils/*",
        "packages/lib/src/monitoring/*",
        "packages/lib/src/logging/*",
        "packages/lib/src/services/*",
        "packages/lib/src/permissions/*",
        "packages/lib/src/notifications/*",
        "packages/lib/src/content/*",
        "packages/lib/src/email-templates/*",
        "packages/lib/src/pages/*",
        "packages/lib/src/test/*",
        "packages/lib/src/types/*",
        "packages/lib/src/sheets/*",
        "packages/lib/src/file-processing/*",
        "packages/lib/src/encryption/*"
      ],
      "@pagespace/db": ["packages/db/src/index.ts"],
      "@pagespace/db/*": ["packages/db/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
