{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@pagespace/*": ["packages/*/src"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["types/**/*"],
  "exclude": ["node_modules"]
}