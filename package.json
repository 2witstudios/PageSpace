{
  "name": "pagespace-local",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:db": "docker compose up postgres migrate seed -d",
    "dev:services": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up postgres redis processor realtime -d",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "pnpm --filter @pagespace/db db:migrate",
    "test": "./scripts/test-with-db.sh",
    "test:turbo": "turbo run test",
    "test:unit": "pnpm --filter @pagespace/lib test && cd apps/web && npx vitest run",
    "test:watch": "pnpm --filter @pagespace/lib test -- --watch",
    "test:ui": "pnpm --filter @pagespace/lib test -- --ui",
    "test:coverage": "pnpm --filter @pagespace/lib test -- --coverage",
    "test:scripts": "echo 'Script tests require isolated vitest context. Run: pnpm --filter @pagespace/db exec tsx ../../scripts/verify-token-migration.ts' && exit 1",
    "verify:migrations": "pnpm --filter @pagespace/db exec tsx ../../scripts/verify-token-migration.ts",
    "dev:desktop": "pnpm --filter desktop dev",
    "build:desktop": "pnpm --filter desktop build",
    "package:desktop": "pnpm --filter desktop package",
    "check:fetch": "node scripts/check-fetch-auth.js",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "changelog:generate": "npx tsx scripts/changelog/index.ts",
    "test:security": "./scripts/test-security.sh"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@typescript-eslint/typescript-estree": "^8.46.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "dotenv": "^17.2.0",
    "drizzle-kit": "^0.23.2",
    "jsdom": "^25.0.1",
    "knip": "^5.70.2",
    "msw": "^2.6.8",
    "tsx": "^4.21.0",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "vitest": "^2.1.0"
  },
  "packageManager": "pnpm@10.13.1",
  "pnpm": {
    "overrides": {
      "drizzle-orm": "^0.32.2",
      "react": "^19.1.2",
      "react-dom": "^19.1.2",
      "@types/react": "^19.1.13",
      "@types/react-dom": "^19.1.9",
      "mdast-util-to-hast": "^13.2.1"
    }
  }
}
