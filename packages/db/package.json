{
  "name": "@pagespace/db",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./test/factories": {
      "types": "./dist/test/factories.d.ts",
      "default": "./dist/test/factories.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "db:migrate": "tsx src/migrate.ts",
    "db:migrate:local": "DATABASE_URL=postgresql://user:password@localhost:5432/pagespace tsx src/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/seed.ts",
    "promote-admin": "tsx src/promote-admin.ts"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.32.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.15.4",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.0",
    "drizzle-kit": "^0.23.2",
    "tsx": "^4.20.3"
  }
}
