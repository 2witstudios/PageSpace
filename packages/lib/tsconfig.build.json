{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@pagespace/db": ["../db/dist/index"],
      "@pagespace/db/*": ["../db/dist/*"],
      "@pagespace/lib/*": ["src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/__tests__/**"]
}
